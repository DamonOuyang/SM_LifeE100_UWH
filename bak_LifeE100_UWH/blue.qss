QScrollBar:vertical{
width:40px;
background: #36363D;
border-radius:0px;
margin:0px 0px 0px 0px;
padding-top:0px;
padding-bottom:0px;

}
QScrollBar::handle:vertical{
background:#F0F0FF;
width:40px;
border: 0px solid #E5E5E5;
min-height:40px;
border-radius:0px;
}

QScrollBar:horizontal{
    background:#36363D;
    height:40px;
    border-radius:0px;
    margin:0px 0px 0px 0px;
    padding-left:0px;
    padding-right:0px;
}
QScrollBar::handle:horizontal{
background:#F0F0FF;
height:40px;
border: 0px solid #E5E5E5;
min-width:40px;
border-radius:0px;
}
 
QScrollBar::sub-line
{
    border: none; 
    background: none; 
    height:0px;
}
QScrollBar::up-arrow
{ 
    subcontrol-origin: margin; 
    height:0px;
}

QScrollBar::down-arrow
{ 

}
QScrollBar::add-line
{
    border: none; 
    background: none; 
    height:0px;
}


