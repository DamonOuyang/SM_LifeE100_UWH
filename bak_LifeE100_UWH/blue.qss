QAbstractButton
{
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,stop:0 lightblue, stop:0.5 darkblue);
    border-width: 0px;
    border-color: darkblue;
    border-style: solid;
    border-radius: 0;
    padding: 0px;
}

QAbstractButton:pressed
{
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,stop:0.5 darkblue, stop:1 lightblue);
    border-color: beige;
}

QAbstractButton[enabled="false"] 
{
	background:gray;
	color: rgb(0, 100, 255);
}
